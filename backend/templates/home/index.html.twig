{% extends 'base.html.twig' %}

{% block title %}Accueil - Talaria{% endblock %}

{% block body %}
<style>
    .container { margin: 1em auto; max-width: 900px; width: 95%; font: 16px/1.5 sans-serif; }
    h1, h2 { color: #2c3e50; }
    ul { list-style-type: none; padding: 0; }
    li { background: #ecf0f1; margin-bottom: 8px; padding: 8px; border-radius: 4px; }
</style>

<div class="container">
    <h1>Bienvenue sur Talaria</h1>

    {# Section Places #}
    <h2>Liste des lieux</h2>
    <ul>
        {% for place in places %}
            <li>
                <strong>{{ place.name }}</strong> - 
                {{ place.description ?: 'Pas de description' }}<br>
                Prix : {{ place.price ?: 'N/A' }} $<br>
                Coordonnées : {{ place.latitude }}, {{ place.longitude }}<br>
                Tags : {{ place.tags|join(', ') }}
            </li>
        {% else %}
            <li>Aucun lieu trouvé</li>
        {% endfor %}
    </ul>

    {# Section Trips #}
    <h2>Liste des voyages</h2>
    <ul>
        {% for trip in trips %}
            <li>
                <strong>{{ trip.destination }}</strong><br>
                Du {{ trip.dateStart|date('d/m/Y') }} au {{ trip.dateEnd|date('d/m/Y') }}<br>
                Budget total : ${{ trip.budgetTotal }}
            </li>
        {% else %}
            <li>Aucun voyage trouvé</li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
